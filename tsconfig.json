{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "ES2022",
    "target": "ES2022",
    "esModuleInterop": true,
    "lib": [
      "ES2022",
      "DOM"
    ],
    "skipLibCheck": true,
    "allowJs": true,
    "pretty": false,
    "moduleResolution": "node",
    "strictNullChecks": true
  },
  "include": [
    "src/**/*.ts"
  ]
}